<Page x:Class="Ecycle.Pages.Product"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Product">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button at the top left -->
        <Button Content="Back" Width="80" Height="30" Margin="10,0,670,10" Click="BackButton_Click"/>

        <!-- Scrollable Product Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Product Image Placeholder -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Background="#f1f3f5" Width="200" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock Text="Image Placeholder" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                </Border>

                <!-- Product Details -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="Tas Daur Ulang" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                    <TextBlock Text="Terjual: 10" FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Text="Stok tersedia: 500" FontSize="14" Foreground="#666" Margin="0,5,0,10"/>
                    <TextBlock Text="Rp55.000" FontSize="20" FontWeight="Bold" Foreground="#2E7D32" Margin="0,10,0,10"/>
                    <TextBlock Text="Tas Daur Ulang ini terbuat dari bahan ramah lingkungan yang didaur ulang dengan desain yang praktis dan modern. Tas ini hadir dalam berbagai warna menarik, seperti hijau, kuning, biru, dan ungu, menjadikannya pilihan gaya yang segar dan unik. Model jaringnya memungkinkan sirkulasi udara yang baik, ideal untuk membawa buah, sayuran, atau kebutuhan belanja lainnya."
                               TextWrapping="Wrap" FontSize="14" Foreground="#333" Margin="0,5,0,10" Width="400"/>
                    <TextBlock Text="Pengiriman" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,10,0,5"/>
                    <TextBlock Text="Dikirim dari Kota Surabaya" FontSize="14" Foreground="#666" Margin="0,5,0,10"/>
                    <TextBlock Text="Ongkir Reguler 9,2 rb - 17 rb Estimasi tiba 31 Okt - 4 Nov Kurir lainnya: Instan" FontSize="12" Foreground="#666" Margin="0,5,0,20"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Penjual" FontWeight="Bold" FontSize="14" Foreground="#666" Margin="0,0,5,0"/>
                        <TextBlock Text="TasMaker" FontSize="14" Foreground="#2E7D32"/>
                    </StackPanel>
                    <TextBlock Text="Kota Surabaya" FontSize="12" Foreground="#666" Margin="0,5,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Masukkan Keranjang" Width="150" Height="40" Background="#34A853" Foreground="White" Margin="0,0,10,0"/>
                        <Button Content="Beli" Width="100" Height="40" Background="#2E7D32" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
