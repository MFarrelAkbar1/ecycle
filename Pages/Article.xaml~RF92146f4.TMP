<Page x:Class="Ecycle.Pages.Article"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ecycle.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Article">

    <Grid Background="#A9D08E">
        <!-- Light green background -->
        <TextBlock Text="E-Cyle Articles" FontFamily="Ubuntu" FontWeight="Bold" FontSize="36" Foreground="#333"
           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Main Border and Container -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="20,80,0,20">
            <ItemsControl ItemsSource="{Binding Articles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="150" ItemHeight="230" HorizontalAlignment="Left">
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10" Background="White">
                            <StackPanel>
                                <!-- Placeholder for Product Image (Picture Box) -->
                                <Border BorderBrush="Gray" BorderThickness="2" Background="#f1f3f5" Width="130" Height="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Picture Box" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Foreground="Gray"/>
                                </Border>
                                <!-- Title Placeholder -->
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" Foreground="#2E7D32" HorizontalAlignment="Center" Margin="10,10,0,0"/>
                                <TextBlock Text="See More" FontSize="9" Foreground="#0000FF" HorizontalAlignment="Center" Margin="5,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
