<Page x:Class="Ecycle.Pages.UserProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="User Product">

    <Page.Resources>
        <!-- Style for Rounded Button -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Background="White">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="600">

                    <!-- Back Button -->
                    <Button Content="Back" Width="100" Height="30" Background="#AAAAAA" Foreground="White" FontSize="14" 
                            Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Left" Margin="0,0,0,20"
                            Click="BackButton_Click"/>

                    <!-- Title with Add New Product Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Your Products" FontFamily="Ubuntu" FontSize="24" FontWeight="Bold" Foreground="#333" Height="26"/>
                        <Button Content="Add New Product" Width="156" Height="38" Background="#34A853" Foreground="White" FontSize="14" Margin="10,0,0,0"
                                Click="AddProduct_Click" Style="{StaticResource RoundedButtonStyle}" RenderTransformOrigin="0.54,0.737"/>
                    </StackPanel>

                    <!-- List of Products -->
                    <StackPanel x:Name="ProductList" Width="600">
                        <Border Background="#F5F5F5" CornerRadius="10" Margin="0,5,0,5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Product Name and Description -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Product Name" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                                    <TextBlock Text="Product description goes here." FontSize="12" Foreground="#666"/>
                                </StackPanel>

                                <!-- Edit Button -->
                                <Button Content="Edit" Width="70" Background="#4CAF50" Foreground="White"
                                        HorizontalAlignment="Center" Margin="0,4,0,0" Click="EditProduct_Click" Grid.Column="1" Style="{StaticResource RoundedButtonStyle}"/>

                                <!-- Delete Button -->
                                <Button Content="Delete" Width="67" Background="#D9534F" Foreground="White"
                                        HorizontalAlignment="Center" Margin="0,4,0,0" Click="DeleteProduct_Click" Grid.Column="2" Style="{StaticResource RoundedButtonStyle}"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Form for Add/Edit Product -->
                    <Border x:Name="ProductForm" Background="#F5F5F5" CornerRadius="20" Margin="0,20,0,0" Padding="20" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="FormTitle" Text="Add New Product" FontFamily="Ubuntu" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>

                            <!-- Product Name Field -->
                            <Border Background="White" CornerRadius="20" Margin="0,10,0,10" Width="400" Height="50">
                                <Grid>
                                    <TextBox x:Name="txtProductName" FontSize="14" Padding="15,0" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center"/>
                                    <TextBlock x:Name="txtProductNamePlaceholder" Text="Nama Barang" FontSize="14" Foreground="Gray" VerticalAlignment="Center" Margin="15,0"
                                               IsHitTestVisible="False" Visibility="Visible"/>
                                </Grid>
                            </Border>

                            <!-- Product Description Field -->
                            <Border Background="White" CornerRadius="20" Margin="0,10,0,10" Width="400" Height="50">
                                <Grid>
                                    <TextBox x:Name="txtProductDescription" FontSize="14" Padding="15,0" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center"/>
                                    <TextBlock x:Name="txtProductDescriptionPlaceholder" Text="Deskripsi Barang" FontSize="14" Foreground="Gray" VerticalAlignment="Center" Margin="15,0"
                                               IsHitTestVisible="False" Visibility="Visible"/>
                                </Grid>
                            </Border>

                            <!-- Product Photo Field -->
                            <Border Background="White" CornerRadius="20" Margin="0,10,0,10" Width="400" Height="100">
                                <StackPanel>
                                    <TextBlock Text="Foto Barang" Margin="10,5,0,0" Foreground="Gray" FontSize="14"/>
                                    <Button Content="Unggah 📤" Width="120" Height="40" HorizontalAlignment="Right" Background="#4CAF50" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- Save / Update Button -->
                            <Button x:Name="btnSave" Content="Add Product" Width="200" Height="50" Background="#34A853" Foreground="White" FontSize="16" Margin="0,20,0,0"
                                    Click="SaveProduct_Click" Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Page>
