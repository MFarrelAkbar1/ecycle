<Page x:Class="Ecycle.Pages.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ecycle.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Account">

    <Grid Background="#4CAF50">
        <!-- Light green background -->

        <!-- Main Container -->
        <Border Background="White" CornerRadius="20" Padding="50" VerticalAlignment="Center" HorizontalAlignment="Center" Height="450">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="E-Cycle" FontFamily="Ubuntu" FontSize="36" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <!-- Profile Photo & Welcome Text -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">

                    <!-- Circular Photo Placeholder -->
                    <Border BorderBrush="Gray" BorderThickness="1" Width="100" Height="100" CornerRadius="50" 
                            Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Change Photo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Foreground="White"/>
                    </Border>

                    <!-- Welcome Text -->
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="Welcome back," FontSize="20" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Vincent!" FontSize="20" FontWeight="Bold" Foreground="#34A853" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Information Section (Static Text) -->
                <StackPanel Margin="10,0,10,0">
                    <!-- Username -->
                    <Border Background="#F5F5F5" CornerRadius="20" Margin="0,0,0,10" Width="300">
                        <Grid>
                            <TextBox x:Name="txtFullname" FontSize="14" Padding="15,10" BorderThickness="0" Background="Transparent"/>
                            <TextBlock x:Name="txtUsernamePlaceholder" Text="New Username" Foreground="Gray" FontSize="14" Padding="15,10" 
                                IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Margin="10,0,10,0">
                    <!-- Username -->
                    <Border Background="#F5F5F5" CornerRadius="20" Width="300">
                        <Grid>
                            <TextBox x:Name="txtNewPassword" FontSize="14" Padding="15,10" BorderThickness="0" Background="Transparent"/>
                            <TextBlock x:Name="txtNewPasswordPlaceholder" Text="New Password" Foreground="Gray" FontSize="14" Padding="15,10" 
                                IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Save New Profile Button (Optional) -->
                <Button Content="Save New Profile" Background="#4CAF50" Foreground="White" FontSize="16" 
                        Width="200" Height="40" HorizontalAlignment="Center" Margin="0,30,0,0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
